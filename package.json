{
  "name": "reactmicrobundle",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "Hamza Khalifa",
  "source": "src/index.tsx",
  "main": "dist/index.umd.js",
  "unpkg": "dist/index.umd.js",
  "module": "./dist/index.modern.module.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "npm run clean && microbundle --format umd --jsx React.createElement",
    "watch": "npm run clean && microbundle watch --no-compress --format umd --jsx React.createElement",
    "dev": "npm run watch",
    "test": "jest --watchAll"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.45",
    "@types/testing-library__react": "^10.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "microbundle": "^0.14.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ]
  }
}
